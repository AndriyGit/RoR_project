<!DOCTYPE html>
<html>
<head>
  <title>TestPsg</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= link_to image_tag('logo.jpg', width: 100), root_path %>
<%= link_to 'Registration', registration_path if current_user.nil? %>
<%= link_to 'Log In', sessions_login_path if current_user.nil? %>
<%= "Hello, #{current_user.name}" unless current_user.nil? %>
<%= link_to 'Log Out', sessions_logout_path unless current_user.nil? %>

<%= yield %>

</body>
</html>
